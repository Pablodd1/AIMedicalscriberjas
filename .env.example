# Database (Required - Use Neon PostgreSQL for Vercel)
DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# Authentication (Required)
SESSION_SECRET=your-session-secret-min-32-chars
JWT_SECRET=your-jwt-secret-min-32-chars

# OpenAI API (Required for AI features)
OPENAI_API_KEY=sk-your-openai-api-key

# Deepgram API (Required for live transcription in telemedicine)
DEEPGRAM_API_KEY=your-deepgram-api-key

# Google Gemini API (Optional - Hybrid AI approach for visual/video analysis)
# Use Gemini for cost-effective visual assessment (63% cheaper than GPT-4o Vision)
# Use Gemini Flash for intake forms (97% cheaper)
GEMINI_API_KEY=your-gemini-api-key

# Twilio SMS API (Optional - For SMS appointment confirmations/reminders)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX

# Feature Flags (Performance Optimization)
# Set to 'true' to enable optional features (reduces startup time and memory usage when disabled)
ENABLE_NOTIFICATIONS=true          # Enable/disable email/SMS notifications and cron jobs
ENABLE_GEMINI_AI=false             # Enable/disable Gemini AI (falls back to OpenAI)
ENABLE_SMS=false                   # Enable/disable SMS notifications (Twilio)

# Environment
NODE_ENV=production
